    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/clients/javascript/node_modules/mocha/bin/_mocha",
            "args": [
                "--inspect-brk",
                "${workspaceFolder}/clients/javascript/test/cacheTest.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/clients/javascript",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "dev"
            }
        }
    ]
}